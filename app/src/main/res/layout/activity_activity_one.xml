<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActivityOne">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/titleLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bookLabel"
        android:id="@+id/bookLabel"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/titleLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookText"
        android:layout_below="@+id/bookLabel"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:inputType="text"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapterLabel"
        android:id="@+id/chapterLabel"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/bookText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapterText"
        android:layout_below="@+id/chapterLabel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/bookText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verseLabel"
        android:id="@+id/verseLabel"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/chapterText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verseText"
        android:layout_below="@+id/verseLabel"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/chapterText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display"
        android:id="@+id/refButton"
        android:layout_below="@+id/verseText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />


</RelativeLayout>
